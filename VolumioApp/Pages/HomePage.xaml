                        </Frame> 

                        <Label Grid.Row="1" Text="{Binding Name}" TextColor="Orange" HorizontalOptions="Center" />
                    </Grid>

                        
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid-->
</ContentPage>